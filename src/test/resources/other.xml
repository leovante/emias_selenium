<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Name suite - Other" thread-count="3" parallel="classes">
    <parameter name="gridRun" value="true"/>
    <parameter name="testng" value="true"/>

    <listeners>
        <listener class-name="com.utils.testngRetryCount.AnnotationTransformer"/>
        <listener class-name="com.utils.CustomListner1"/>
    </listeners>
    <!--Медицинские записи-->
    <test name="TestMR_Chrome" verbose="1">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="MR"/>
            </run>
        </groups>
        <packages>
            <package name="emias.medicalrecords"/>
        </packages>
    </test>
    <!--ЕМИАС веб-->
    <test name="TestMIS_Before" verbose="1">
        <parameter name="browser" value="chrome"/>
        <packages>
            <package name="emias.mis.before"/>
        </packages>
    </test>
    <test name="TestMIS_Chrome" verbose="1">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="mis"/>
            </run>
        </groups>
        <classes>
            <class name="emias.mis.base.PerehodyTest"/>
        </classes>
    </test>

</suite>