<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Name suite - MIS">
    <parameter name="browser" value="chrome"/>
    <parameter name="platform" value="WINDOWS"/>
    <parameter name="site" value="http://emias.mosreg.ru/demonstration/"/>
    <parameter name="login" value="temnikov"/>
    <parameter name="pass" value="1214"/>
    <parameter name="gridIsRun" value="true"/>
    <parameter name="headless" value="true"/>
    <parameter name="enter_without_mis" value="false"/>

    <listeners>
        <listener class-name="utilities.testngRetryCount.AnnotationTransformer"/>
        <!--         <listener class-name="Listeners.TestListener"/> -->
    </listeners>

    <test name="BeforeTest" verbose="1">
        <parameter name="browser" value="chrome"/>
        <packages>
            <package name="emias.mis.before"/>
        </packages>
    </test>
    <test verbose="1" name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="mis"/>
            </run>
        </groups>
        <classes>
            <class name="emias.mis.before.BeforeSuiteMIS"/>
        </classes>
        <!--<packages>-->
        <!--<package name="emias.mis.regress"/>-->
        <!--</packages>-->
    </test>
    <test name="AfterTest" verbose="1">
        <parameter name="browser" value="chrome"/>
        <packages>
            <package name="emias.mis.after"/>
        </packages>
    </test>
</suite>

